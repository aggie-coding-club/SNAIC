#:kivy 2.3.0

<ScanScreen>:
    button: button

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "Show camera feed"
            size_hint: 1, 0.75

        Button:
            text: "Scan"
            size_hint: 1, 0.25
            font_size: self.width / 20
            id: button

<LoadingScreen>:
    BoxLayout:
        orientation: "horizontal"

        Label:
            text: "Loading..."

<ProductListScreen>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        Label:
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            padding: 10, 10
            text: "Really cool product:\n" * 100