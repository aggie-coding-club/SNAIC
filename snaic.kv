#:kivy 2.3.0

ScreenManager:
    Scan:
    CamTab:
    Load:
    ProductsList:

<Scan@Screen>:
    name: "scan"
    button: button

    BoxLayout:
        orientation: "vertical"

        # MDLabel:
        #     text: "camera feed"
        #     size_hint: 1, 0.75
        #     halign: "center"

        MDRaisedButton:
            text: "Scan"
            size_hint: 1, 0.25
            font_size: self.width / 20
            id: button
            on_release:
                app.root.current = "cam_tab"
                root.manager.transition.direction = "left"

<Load@Screen>:
    name: "load"

    on_enter:
        import time
        time.sleep(1)
        app.root.current = "products"
        root.manager.transition.direction = "left"

    BoxLayout:
        orientation: "horizontal"

        MDLabel:
            text: "Loading..."
            halign: "center"

<CamTab@Screen>:
    name: "cam_tab"
    show_camera: show_camera

    BoxLayout:
        orientation: "vertical"
        # Camera:
        #     id: mycamera
        #     resolution: (640, 480)
        #     play: True  # Starts the camera feed automatically
        Image:
            id: show_camera
            size: (640, 480)
            on_touch_down: root.image_press(*args)
        Button:
            text: "Scan Product"
            size_hint: .2, .1
            pos_hint: {"center_x": .5}
            on_release:
                app.root.current = "products"
                root.manager.transition.direction = "left"
    
    

<ProductsList@Screen>:
    name: "products"
    container: container
    loading: loading

    MDSpinner:
        size_hint: None, None
        size: dp(46), dp(46)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        active: root.loading_active
        id: loading

    # MDIcon:
    #     id: loading
    #     icon: "loading"
    #     pos_hint: {"center_x": .5, "center_y": .5}

    MDScrollView:
        MDList:
            id: container

